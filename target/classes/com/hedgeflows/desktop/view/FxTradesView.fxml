<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox
        xmlns="http://javafx.com/javafx/17"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.hedgeflows.desktop.controller.FxTradesController"
        spacing="20.0"
        stylesheets="@../../../css/styles.css">

    <padding>
        <Insets top="30.0" right="30.0" bottom="30.0" left="30.0"/>
    </padding>

    <children>

        <!-- HEADER -->
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label styleClass="h1" text="FX Trades"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="newTradeButton"
                        text="New Trade"
                        styleClass="btn-primary"/>
            </children>
        </HBox>

        <!-- FILTERS -->
        <HBox spacing="10.0" styleClass="card">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>

            <children>
                <TextField fx:id="searchField"
                           promptText="Search currency pair..."
                           styleClass="text-field"
                           HBox.hgrow="ALWAYS"/>

                <ComboBox fx:id="statusFilter" prefWidth="150.0"/>
                <DatePicker fx:id="dateFilter"/>

                <Button fx:id="filterButton"
                        text="Filter"
                        styleClass="btn-secondary"/>
            </children>
        </HBox>

        <!-- TRADES TABLE -->
        <TableView fx:id="tradesTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn"
                             text="ID"
                             prefWidth="75.0"
                             visible="false"/>

                <TableColumn fx:id="pairColumn"
                             text="Pair"
                             prefWidth="150.0"/>

                <TableColumn fx:id="typeColumn"
                             text="Type"
                             prefWidth="100.0"/>

                <TableColumn fx:id="amountColumn"
                             text="Amount"
                             prefWidth="150.0"/>

                <TableColumn fx:id="statusColumn"
                             text="Status"
                             prefWidth="100.0"/>

                <TableColumn fx:id="dateColumn"
                             text="Date"
                             prefWidth="150.0"/>
            </columns>

            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

    </children>

</VBox>


