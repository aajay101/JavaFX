<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.hedgeflows.desktop.controller.MainController"
            fx:id="root"
            prefHeight="700"
            prefWidth="1100"
            styleClass="root">

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox prefWidth="240"
              spacing="12"
              styleClass="sidebar">

            <padding>
                <Insets top="28" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Logo -->
            <Label text="HedgeFlows"
                   styleClass="h1"
                   textFill="WHITE">
                <padding>
                    <Insets bottom="32"/>
                </padding>
            </Label>

            <!-- Nav buttons -->
            <Button text="Dashboard"
                    maxWidth="Infinity"
                    styleClass="nav-button"
                    onAction="#onDashboardClick">
                <graphic>
                    <FontIcon iconLiteral="fas-chart-line" iconColor="WHITE" iconSize="16"/>
                </graphic>
            </Button>

            <Button text="Payments"
                    maxWidth="Infinity"
                    styleClass="nav-button"
                    onAction="#onPaymentsClick">
                <graphic>
                    <FontIcon iconLiteral="fas-credit-card" iconColor="WHITE" iconSize="16"/>
                </graphic>
            </Button>

            <Button text="FX Trades"
                    maxWidth="Infinity"
                    styleClass="nav-button"
                    onAction="#onFxTradesClick">
                <graphic>
                    <FontIcon iconLiteral="fas-exchange-alt" iconColor="WHITE" iconSize="16"/>
                </graphic>
            </Button>

            <Button text="Reports"
                    maxWidth="Infinity"
                    styleClass="nav-button"
                    onAction="#onReportsClick">
                <graphic>
                    <FontIcon iconLiteral="fas-file-alt" iconColor="WHITE" iconSize="16"/>
                </graphic>
            </Button>

            <Button text="Settings"
                    maxWidth="Infinity"
                    styleClass="nav-button"
                    onAction="#onSettingsClick">
                <graphic>
                    <FontIcon iconLiteral="fas-cog" iconColor="WHITE" iconSize="16"/>
                </graphic>
            </Button>

            <!-- Spacer -->
            <Region VBox.vgrow="ALWAYS"/>

            <!-- User Section -->
            <VBox spacing="8" styleClass="user-profile">
                <Label fx:id="userNameLabel"
                       styleClass="text-secondary"
                       textFill="WHITE"/>
                <Button text="Logout"
                        styleClass="btn-secondary"
                        onAction="#onLogoutClick"/>
            </VBox>

        </VBox>
    </left>

    <!-- CONTENT AREA -->
    <center>
        <StackPane fx:id="contentArea">
            <padding>
                <Insets top="24" right="24" bottom="24" left="24"/>
            </padding>
        </StackPane>
    </center>

</BorderPane>
